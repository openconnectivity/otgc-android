<resources>
    <!-- color for the app bar and other primary UI elements -->
    <color name="colorPrimary">@color/ocf_dark_blue</color>

    <!-- a darker variant of the primary color, used for
         the status bar (on Android 5.0+) and contextual app bars -->
    <color name="colorPrimaryDark">@color/ocf_darker_blue</color>

    <!-- a secondary color for controls like checkboxes and text fields -->
    <color name="colorAccent">@color/ocf_light_blue</color>

    <!-- OCF PRIMARY colors-->
    <color name="ocf_light_blue">#3db5e6</color>
    <color name="ocf_dark_blue">#006aa7</color>
    <color name="ocf_darker_blue">#004078</color>
    <color name="ocf_green">#6bc04b</color>
    <color name="OCF_BLACK">#231f20</color>

    <!-- OCF SECONDARY colors-->
    <color name="OCF_ORANGE">#f58220</color>
    <color name="OCF_YELLOW">#fcc509</color>
    <color name="OCF_PURPLE">#8e44ad</color>
    <color name="OCF_LIGHT_GRAY">#717271</color>
    <color name="OCF_DARK_GRAY">#78777a</color>

    <!-- OCF other colors-->
    <color name="white1">#ffffffff</color>
    <color name="white_transparent">#33FFFFFF</color>

    <color name="ic_launcher_background">#FDFFF8</color>
</resources>
